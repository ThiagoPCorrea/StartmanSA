@model StartmanSA.Models.Materiaprima

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar isso?</h3>
<div>
    <h4>Matéria-Prima</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.QuantidadeEstoqueMax):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeEstoqueMax)
        </dd>
    </dl>

    <form asp-action="Delete" id="formDel">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="QuantidadeEstoque" />
        <button type="submit" onclick="testerrorDel()" value="Deletar" class="btn btn-danger">Deletar</button> |
        <a asp-action="Index">Voltar</a>
    </form>

    <script>
    function testerrorDel() {
        var qtdEstoque = parseInt(document.getElementById("formDel").elements[1].value);
        if (qtdEstoque != 0) {
            alert("Erro: Ainda há produtos no estoque, retire todos antes de deletar");
        }
    }
    </script>
</div>
